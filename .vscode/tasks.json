{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"./main.cpp",
				"./printer.cpp",
				"./vector.cpp",
				"./figures.h",
				"./printer.h",
				"./vector.h",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system",
			
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}